filters:
  or:
    - type == "head"
    - type == "HEAD"
views:
  - type: table
    name: Table
    filters:
      and:
        - file.folder != "templates"
        - file.folder != "99_Archive"
    order:
      - file.name
      - status
      - type
    sort:
      - property: status
        direction: ASC
      - property: file.ctime
        direction: DESC
    columnSize:
      file.name: 580
      note.status: 127
  - type: cards
    name: View
    cardSize: 180
    imageAspectRatio: 0.3
